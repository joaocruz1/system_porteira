generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model loginUser {
  id          String    @id @default(uuid())
  nome        String
  email       String    @unique
  cargo       String
  senha       String
  ativo       Boolean
  dataCriacao DateTime?
}


model ProdutoVariante {
  id           String    @id @default(uuid())
  cor          String
  quantidade   Int
  image        String? // No Prisma é 'image', no DB também é 'image'
  sku          String
  productId   String

  produto Produto @relation(fields: [productId], references: [id])
}

model Produto {
  id           String    @id @default(uuid()) @map("id_produt") // No Prisma é 'id', no DB é 'id_produto'
  nome         String
  categoria    String?
  quantidade   Int?
  preco        Float?
  fornecedor   String?
  data_entrada DateTime? @map("data_entrada") // No Prisma é 'data_entrada', no DB também é 'data_entrada'
  image        String? // No Prisma é 'image', no DB também é 'image'
  variacoes   ProdutoVariante[]
}

model Pedido {
  id            String   @id @default(uuid()) @map("pedido_id")
  data_pedido   DateTime
  status        String
  total         Decimal
  logo          String
  item          Json
  cliente_infos Json
}

model Perdas {
  id          String   @id @default(uuid()) @map("perda_id")
  produtoId   String
  quantidade  Int
  image       String
  motivo      String
  responsavel String
  dataPerda   DateTime
  descricao   String
  valorTotal  Decimal
}

model Custos {
  id             String    @id @default(uuid()) @map("custo_id")
  categoria      String
  subcategoria   String
  descricao      String
  valor          Decimal
  dataVencimento DateTime
  dataPagamento  DateTime?
  status         String
  fornecedor     String
  observacoes    String
  recorrente     Boolean
  centroCusto    String
}
