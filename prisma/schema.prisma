
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Produto {
  id           String   @id @default(uuid()) @map("id_produt") // No Prisma é 'id', no DB é 'id_produto'
  nome         String
  categoria    String?
  quantidade   Int?
  preco        Float?
  fornecedor   String?
  data_entrada DateTime? @map("data_entrada") // No Prisma é 'data_entrada', no DB também é 'data_entrada'
  image        String?                      // No Prisma é 'image', no DB também é 'image'
  
}
model Pedido {
  id          String     @id @default(uuid()) @map("pedido_id")
  cliente_id  String     @map("cliente_id")
  data_pedido DateTime   
  status Boolean 
  total Decimal
  logo String
}

model Cliente{
  id          String     @id @default(uuid()) @map("cliente_id")
  nome  String 
  numero  Int 
  endereco String 
  email String
  empresa String
}

